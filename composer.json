{
    "name": "brianvarskonst/wordpress-nonce",
    "description": "WordPress Nonce in an Object Oriented Way",
    "type": "library",
    "license": "GPL2",
    "keywords": [
        "wordpress",
        "wordpress-nonce",
        "wordpress-security"
    ],
    "authors": [
        {
            "name": "Brian SchÃ¤ffner",
            "email": "burnify.design@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/brianvarskonst/wordpress-nonce/issues"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "inpsyde/php-coding-standards": "^1.0",
        "brain/monkey": "^2.6",
        "symfony/var-dumper": "^5",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4",
        "psalm/plugin-mockery": "^0.9.1",
        "roots/wordpress": "5.3.*@stable"
    },
    "autoload": {
        "psr-4": {
            "Bvsk\\WordPress\\NonceManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bvsk\\WordPress\\NonceManager\\Tests\\": "tests/src"
        }
    },
    "scripts": {
        "cs": "@php ./vendor/bin/phpcs -s",
        "cbf": "@php ./vendor/bin/phpcbf",
        "psalm": "@php ./vendor/vimeo/psalm/psalm --no-cache --no-diff --no-progress --output-format=compact",
        "tests": "@php ./vendor/bin/phpunit",
        "tests:no-cov": "@php ./vendor/bin/phpunit --no-coverage",
        "tests:unit": "@php ./vendor/bin/phpunit --testsuite=PHPUnit",
        "tests:unit:no-cov": "@php ./vendor/bin/phpunit --testsuite=PHPUnit --no-coverage",
        "qa": [
            "@cs",
            "@psalm",
            "@tests"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress"
    }
}
